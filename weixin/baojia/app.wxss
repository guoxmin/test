Page{
  width: 100%;
  height: 100%;
}

/**app.wxss**/
.container{
  background: #eee;
  width: 100%;
  height: 100%;
  font-size: 16px;
}
.flex-column{
  display: flex;
   flex-direction:column;
}

.flex-row{
  display: flex;
   flex-direction:row;
}
.area,
.section{
  padding: 10px;
  background: #fff;
}

.mt15{
  margin-top:15px;
}
.mt10{
  margin-top:10px;
}




/*搜索框*/
.search{
  position: relative;
}

.search input{
  width: 100%;
  height: 36px;
  background:#efeff1;
  padding: 0 40px 0 10px;
  box-sizing: border-box;
  border-radius: 5px;
}
.search-placeholder{
  color:#999; 
  font-size:16px;
}
.search icon{
  position: absolute;
  top: 8px;
  right: 10px;
}