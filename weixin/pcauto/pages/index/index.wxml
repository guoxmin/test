                        </view>
                    </view>
                     <view class="box2">
                        <view class="th">
                             <text class="mark">东方本田</text>
                        </view>
                        <view class="tb">
                            <view class="pic-text2">
                                <image src="http://zzb.pcauto.com.cn/tools/img/?50x50"></image>
                                <view class="text">
                                    <text>奥德赛</text>
                                    <view class="price">官方价: <text>22.98-29.98</text></view>
                                </view>
                            </view>
                           
                        </view>
                    </view>
                </view>
                <view class="tab-contentItem" wx:if="{{tabIndex=='1'}}">
                    <view class="box2">
                        <view class="th">
                             <text class="mark">广汽本田</text>
                        </view>
                        <view class="tb">
                            <view class="pic-text2">
                                <image src="http://zzb.pcauto.com.cn/tools/img/?50x50"></image>
                                <view class="text">
                                    <text>奥德赛</text>
                                    <view class="price">官方价: <text>22.98-29.98</text></view>
                                </view>
                            </view>
                            <view class="pic-text2">
                                <image src="http://zzb.pcauto.com.cn/tools/img/?50x50"></image>
                                <view class="text">
                                    <text>奥德赛</text>
                                    <view class="price">官方价: <text>22.98-29.98</text></view>
                                </view>
                            </view>
                            <view class="pic-text2">
                                <image src="http://zzb.pcauto.com.cn/tools/img/?50x50"></image>
                                <view class="text">
                                    <text>奥德赛</text>
                                    <view class="price">官方价: <text>22.98-29.98</text></view>
                                </view>
                            </view>
                        </view>
                    </view>
                     <view class="box2">
                        <view class="th">
                             <text class="mark">东方本田</text>
                        </view>
                        <view class="tb">
                            <view class="pic-text2">
                                <image src="http://zzb.pcauto.com.cn/tools/img/?50x50"></image>
                                <view class="text">
                                    <text>奥德赛</text>
                                    <view class="price">官方价: <text>22.98-29.98</text></view>
                                </view>
                            </view>
                            <view class="pic-text2">
                                <image src="http://zzb.pcauto.com.cn/tools/img/?50x50"></image>
                                <view class="text">
                                    <text>奥德赛</text>
                                    <view class="price">官方价: <text>22.98-29.98</text></view>
                                </view>
                            </view>
                            <view class="pic-text2">
                                <image src="http://zzb.pcauto.com.cn/tools/img/?50x50"></image>
                                <view class="text">
                                    <text>奥德赛</text>
                                    <view class="price">官方价: <text>22.98-29.98</text></view>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            
        </view>
        <view class="mask" bindtap="closeSlide"></view>
    </block>

