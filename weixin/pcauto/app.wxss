/**app.wxss**/
.container{
  background: #eee;
  height: 100%;
}
.box{
  padding: 20rpx;
  background: #fff;
}

.flex-box-row{
  display: flex;
   flex-direction:row;
}

/*搜索框*/
.search{
  position: relative;
}

.search input{
  width: 100%;
  height: 36px;
  background:#efeff1;
  border-radius: 5px;
}
.search-placeholder{
  color:#999; 
  padding-left:10px; 
  font-size:1rem;
}
.search icon{
  position: absolute;
  top: 8px;
  right: 10px;
}