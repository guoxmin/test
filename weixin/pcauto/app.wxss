/**app.wxss**/
.container{
  background: #eee;
  height: 100%;
}
.flex-column{
  display: flex;
   flex-direction:column;
}

.flex-row{
  display: flex;
   flex-direction:row;
}
.box{
  padding: 10px;
  background: #fff;
}



/*搜索框*/
.search{
  position: relative;
}

.search input{
  width: 100%;
  height: 36px;
  background:#efeff1;
  padding: 0 40px 0 10px;
  box-sizing: border-box;
  border-radius: 5px;
}
.search-placeholder{
  color:#999; 
  font-size:1rem;
}
.search icon{
  position: absolute;
  top: 8px;
  right: 10px;
}